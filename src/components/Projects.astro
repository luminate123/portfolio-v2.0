---
const projects = [
    {
        title: "E-commerce Dashboard",
        description: "Panel de administración completo para tiendas online con análisis en tiempo real y reportes avanzados.",
        tags: ["React", "Tailwind", "Node.js", "MongoDB"],
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true,
        span: "lg:col-span-2 lg:row-span-2"
    },
    {
        title: "App de Finanzas",
        description: "Gestión de gastos personales con gráficos interactivos y análisis predictivo.",
        tags: ["React Native", "Firebase", "TypeScript"],
        image: "https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true,
        span: "lg:col-span-2"
    },
    {
        title: "Portfolio Minimalista",
        description: "Portfolio web enfocado en tipografía, espacio y animaciones sutiles.",
        tags: ["Astro", "CSS", "JavaScript"],
        image: "https://images.unsplash.com/photo-1467232004584-a241de8bcf5d?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: false,
        span: "lg:col-span-2"
    },
    {
        title: "Automation Studio",
        description: "Plataforma de automatización empresarial con IA, chatbots y análisis de conversaciones.",
        tags: ["Python", "OpenAI", "FastAPI", "React"],
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true,
        span: "lg:col-span-2"
    }
];
---

<!-- Section title -->
<div class="col-span-full flex items-center gap-4 py-4 animate-on-scroll" id="projects">
    <h2 class="text-2xl md:text-3xl font-bold text-white whitespace-nowrap">Proyectos</h2>
    <div class="h-px flex-1 bg-gradient-to-r from-white/10 to-transparent"></div>
</div>

{projects.map((project, index) => (
    <article class={`bento-tile project-tile ${project.span} col-span-full sm:col-span-1 group animate-on-scroll`} style={`animation-delay: ${index * 0.1}s`}>
        <div class="relative overflow-hidden h-44 md:h-52 lg:h-full lg:min-h-[220px]">
            <img src={project.image} alt={project.title} loading="lazy" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
            <div class="absolute inset-0 bg-gradient-to-t from-[#06060a] via-[#06060a]/70 to-transparent"></div>
            
            {project.featured && (
                <span class="absolute top-4 right-4 px-2.5 py-1 rounded-full bg-blue-500/20 border border-blue-500/30 text-xs font-semibold text-blue-400 backdrop-blur-sm">
                    Featured
                </span>
            )}
            
            <!-- Content overlay -->
            <div class="absolute bottom-0 left-0 right-0 p-5 md:p-6">
                <h3 class="text-lg md:text-xl font-semibold text-white mb-1.5 group-hover:text-blue-400 transition-colors">{project.title}</h3>
                <p class="text-sm text-zinc-400 leading-relaxed mb-3 line-clamp-2">{project.description}</p>
                <div class="flex items-center justify-between gap-3">
                    <div class="flex flex-wrap gap-1.5">
                        {project.tags.map(tag => (
                            <span class="px-2 py-0.5 text-[11px] font-medium rounded bg-white/10 text-zinc-300">{tag}</span>
                        ))}
                    </div>
                    <div class="flex gap-2 shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        {project.liveUrl && (
                            <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="w-8 h-8 flex items-center justify-center rounded-lg bg-blue-500/20 text-blue-400 hover:bg-blue-500/40 transition-colors" aria-label="Ver live">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            </a>
                        )}
                        {project.codeUrl && (
                            <a href={project.codeUrl} target="_blank" rel="noopener noreferrer" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white/10 text-zinc-300 hover:bg-white/20 transition-colors" aria-label="Ver código">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>
                            </a>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </article>
))}

<style>
    .project-tile {
        padding: 0 !important;
    }
</style>
