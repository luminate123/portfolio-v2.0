---
const projects = [
    {
        title: "E-commerce Dashboard",
        description: "Un panel de administración completo para tiendas online con análisis de datos en tiempo real.",
        tags: ["React", "Tailwind", "Node.js"],
        link: "#"
    },
    {
        title: "App de Finanzas",
        description: "Aplicación móvil para gestión de gastos personales con gráficos interactivos.",
        tags: ["React Native", "Firebase", "TypeScript"],
        link: "#"
    },
    {
        title: "Portfolio Minimalista",
        description: "Diseño y desarrollo de un portfolio web enfocado en la tipografía y el espacio.",
        tags: ["Astro", "CSS", "JavaScript"],
        link: "#"
    }
];
---

<section id="projects" class="section">
    <div class="container">
        <h2 class="section-title animate-on-scroll">Proyectos Destacados</h2>
        <div class="grid">
            {projects.map((project, index) => (
                <article class="card animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
                    <div class="card-content">
                        <div class="project-header">
                            <div class="folder-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
                            </div>
                            <a href={project.link} class="external-link" aria-label="Ver proyecto">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            </a>
                        </div>
                        <h3>{project.title}</h3>
                        <p>{project.description}</p>
                        <div class="tags">
                            {project.tags.map(tag => (
                                <span class="tag">{tag}</span>
                            ))}
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
    .section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .section-title {
        font-size: 3rem;
        margin-bottom: 4rem;
        color: var(--color-text);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2.5rem;
        width: 100%;
    }

    .card {
        background: rgba(26, 26, 26, 0.3);
        border-radius: 1rem;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .card:hover {
        transform: translateY(-10px);
        border-color: rgba(255, 255, 255, 0.3);
        box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.5);
        background: rgba(26, 26, 26, 0.5);
    }

    .card-content {
        position: relative;
        z-index: 2;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .folder-icon {
        color: var(--color-primary);
        transition: transform 0.3s ease;
    }

    .card:hover .folder-icon {
        transform: scale(1.1);
    }

    .external-link {
        color: #a3a3a3;
        transition: all 0.3s ease;
    }

    .external-link:hover {
        color: var(--color-primary);
        transform: translate(2px, -2px);
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--color-text);
        font-weight: 600;
    }

    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            800px circle at var(--mouse-x) var(--mouse-y), 
            rgba(255, 255, 255, 0.06), 
            transparent 40%
        );
        opacity: 0;
        transition: opacity 0.5s;
        pointer-events: none;
        z-index: 1;
    }

    .card:hover::before {
        opacity: 1;
    }

    p {
        color: #d4d4d4;
        margin-bottom: 2rem;
        line-height: 1.6;
        flex-grow: 1;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-top: auto;
    }

    .tag {
        font-size: 0.75rem;
        padding: 0.35rem 0.85rem;
        background: rgba(0, 0, 0, 0.6);
        color: var(--color-primary);
        border-radius: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }
    
    .card:hover .tag {
        border-color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.1);
    }
</style>
