---
const projects = [
    {
        title: "E-commerce Dashboard",
        description: "Panel de administración completo para tiendas online.",
        longDescription: "Un panel de administración completo para tiendas online con análisis de datos en tiempo real, gestión de productos, y reportes avanzados.",
        tags: ["React", "Tailwind", "Node.js", "MongoDB"],
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true
    },
    {
        title: "App de Finanzas",
        description: "Gestión de gastos personales con gráficos interactivos.",
        longDescription: "Aplicación móvil para gestión de gastos personales con gráficos interactivos, categorización automática y análisis predictivo de gastos.",
        tags: ["React Native", "Firebase", "TypeScript"],
        image: "https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true
    },
    {
        title: "Portfolio Minimalista",
        description: "Portfolio web enfocado en tipografía y espacio.",
        longDescription: "Diseño y desarrollo de un portfolio web enfocado en la tipografía y el espacio, con animaciones sutiles y experiencia de usuario premium.",
        tags: ["Astro", "CSS", "JavaScript"],
        image: "https://images.unsplash.com/photo-1467232004584-a241de8bcf5d?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: false
    },
    {
        title: "Automation Studio",
        description: "Plataforma de automatización con IA.",
        longDescription: "Plataforma completa de automatización de procesos empresariales con inteligencia artificial, chatbots y análisis de conversaciones.",
        tags: ["Python", "OpenAI", "FastAPI", "React"],
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop",
        liveUrl: "#",
        codeUrl: "#",
        featured: true
    }
];
---

<section id="projects" class="section">
    <div class="container">
        <h2 class="section-title animate-on-scroll">Proyectos Destacados</h2>

        <div class="projects-grid">
            {projects.map((project, index) => (
                <article 
                    class={`project-card animate-on-scroll glass-hover ${project.featured ? 'featured' : ''}`}
                    style={`animation-delay: ${index * 0.1}s`}
                    data-category={project.tags[0].toLowerCase()}
                >
                    <div class="project-image">
                        <img src={project.image} alt={project.title} loading="lazy" />
                        <div class="image-overlay">
                            <div class="overlay-content">
                                <p class="long-description">{project.longDescription}</p>
                                <div class="project-links">
                                    {project.liveUrl && (
                                        <a href={project.liveUrl} class="project-btn btn-primary" target="_blank" rel="noopener noreferrer">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                                            Ver Live
                                        </a>
                                    )}
                                    {project.codeUrl && (
                                        <a href={project.codeUrl} class="project-btn btn-secondary" target="_blank" rel="noopener noreferrer">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                                            Ver Código
                                        </a>
                                    )}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="project-content">
                        <div class="project-header">
                            <div class="folder-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
                            </div>
                            {project.featured && (
                                <span class="featured-badge">Featured</span>
                            )}
                        </div>
                        <h3>{project.title}</h3>
                        <p class="short-description">{project.description}</p>
                        <div class="tech-stack">
                            {project.tags.map(tag => (
                                <span class="tech-badge">{tag}</span>
                            ))}
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<script>
    // Projects animation on scroll
    document.addEventListener('DOMContentLoaded', () => {
        const projectCards = document.querySelectorAll('.project-card');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        projectCards.forEach(card => observer.observe(card));
    });
</script>

<style>
    .section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6rem 0;
    }

    .section-title {
        font-size: var(--text-5xl);
        font-weight: var(--font-bold);
        margin-bottom: 3rem;
        color: var(--color-text);
        text-align: center;
    }

    /* Projects Grid */
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(min(100%, 350px), 1fr));
        gap: 2.5rem;
        width: 100%;
    }

    .project-card {
        background: rgba(26, 26, 26, 0.3);
        border-radius: 1.2rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(10px);
    }

    .project-card:hover {
        transform: translateY(-10px);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 
            0 20px 40px -15px rgba(0, 0, 0, 0.5),
            0 0 0 1px rgba(59, 130, 246, 0.1);
        background: rgba(26, 26, 26, 0.5);
    }

    .project-card.featured {
        border-color: rgba(59, 130, 246, 0.3);
    }

    .project-card.featured::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    }

    /* Project Image */
    .project-image {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
        background: #000;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
        filter: grayscale(0.3);
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
        filter: grayscale(0);
    }

    /* Image Overlay */
    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(10, 10, 15, 0.7),
            rgba(10, 10, 15, 0.95)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
        padding: 1.5rem;
    }

    .project-card:hover .image-overlay {
        opacity: 1;
    }

    .overlay-content {
        text-align: center;
        transform: translateY(10px);
        transition: transform 0.4s ease;
    }

    .project-card:hover .overlay-content {
        transform: translateY(0);
    }

    .long-description {
        color: var(--color-muted);
        font-size: var(--text-sm);
        font-weight: var(--font-normal);
        margin-bottom: 1.5rem;
        line-height: var(--leading-normal);
    }

    .project-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .project-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.2rem;
        border-radius: 0.5rem;
        font-size: var(--text-sm);
        font-weight: var(--font-semibold);
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .project-btn.btn-primary {
        background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
        color: white;
        border: none;
    }

    .project-btn.btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    }

    .project-btn.btn-secondary {
        background: transparent;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .project-btn.btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: white;
    }

    /* Project Content */
    .project-content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .folder-icon {
        color: var(--color-primary);
        transition: transform 0.3s ease;
    }

    .project-card:hover .folder-icon {
        transform: scale(1.1) rotate(-10deg);
    }

    .featured-badge {
        padding: 0.3rem 0.8rem;
        background: linear-gradient(135deg, var(--color-accent), var(--color-accent-dark));
        color: white;
        font-size: var(--text-xs);
        font-weight: var(--font-semibold);
        border-radius: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    h3 {
        font-size: var(--text-2xl);
        margin-bottom: 0.8rem;
        font-weight: var(--font-semibold);
        color: var(--color-text);
        transition: color 0.3s ease;
    }

    .project-card:hover h3 {
        color: var(--color-primary);
    }

    .short-description {
        font-size: var(--text-base);
        font-weight: var(--font-normal);
        color: var(--color-muted);
        margin-bottom: 1.5rem;
        line-height: var(--leading-relaxed);
        flex-grow: 1;
    }

    /* Tech Stack */
    .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem;
    }

    .tech-badge {
        padding: 0.4rem 0.9rem;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 0.4rem;
        color: var(--color-tech);
        font-size: var(--text-sm);
        font-weight: var(--font-medium);
        transition: all 0.3s ease;
    }

    .tech-badge:hover {
        background: rgba(59, 130, 246, 0.2);
        border-color: var(--color-primary);
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .section-title {
            font-size: 2.5rem;
        }

        .project-card {
            transform: none !important;
        }

        .project-image {
            height: 180px;
        }
    }
</style>
