<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        overflow: hidden;
    }

    .relative-z {
        position: relative;
        z-index: 10;
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 4rem;
        align-items: center;
    }

    .hero-content {
        max-width: 100%;
    }

    .hero-image {
        display: flex;
        justify-content: center;
        perspective: none;
    }

    .image-container {
        position: relative;
        width: 500px;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* --- PIXEL ART SCENE STYLES --- */

    /* --- PIXEL ART SCENE STYLES --- */

    .pixel-art-scene {
        position: relative;
        width: 100%;
        max-width: 400px;
        height: 350px;
        /* Removed scale to avoid overflow issues, can adjust size with width */
        margin: 0 auto;
    }

    /* -- DESK -- */
    .pixel-desk {
        position: absolute;
        bottom: 0px;
        left: 50%;
        transform: translateX(-50%);
        width: 360px;
        height: 140px;
        z-index: 10;
    }

    .desk-top {
        width: 100%;
        height: 15px;
        background: #34495e; /* Light desk */
        border-bottom: 5px solid #1a252f;
        position: absolute;
        top: 0;
        box-shadow: 0 5px 0 rgba(0, 0, 0, 0.2);
    }

    .desk-leg {
        width: 20px;
        height: 120px;
        background: #2c3e50; /* Dark desk */
        position: absolute;
        top: 20px;
        border-right: 5px solid rgba(0, 0, 0, 0.3);
    }
    .desk-leg.left {
        left: 40px;
    }
    .desk-leg.right {
        right: 40px;
    }

    /* -- MONITORS -- */
    .monitors {
        position: absolute;
        bottom: 140px;
        left: 50%;
        transform: translateX(-50%);
        width: 360px;
        height: 150px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        z-index: 5;
    }

    .monitor {
        position: relative;
        margin: 0 -10px;
        transition: transform 0.3s;
    }
    .monitor:hover {
        z-index: 20;
        transform: scale(1.05);
    }

    .monitor-frame {
        background: #252540; /* Frame color */
        padding: 8px 8px 12px 8px; /* Bigger bottom bezel */
        border-radius: 4px;
        box-shadow: -2px 2px 0 #151525;
    }

    .monitor-screen {
        background: #000;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    /* Screen Sizes */
    .center-mon {
        z-index: 10;
        padding-bottom: 20px;
    }
    .center-mon .monitor-frame {
        width: 160px;
        height: 110px;
    }
    .center-mon .monitor-screen {
        width: 100%;
        height: 100%;
    }

    .left-mon {
        transform: rotateY(15deg) translateX(5px);
        z-index: 8;
    }
    .left-mon .monitor-frame {
        width: 120px;
        height: 140px; /* Vertical */
    }
    .left-mon .monitor-screen {
        width: 100%;
        height: 100%;
    }

    .right-mon {
        transform: rotateY(-15deg) translateX(-5px);
        z-index: 8;
    }
    .right-mon .monitor-frame {
        width: 130px;
        height: 90px;
    }
    .right-mon .monitor-screen {
        width: 100%;
        height: 100%;
    }

    .monitor-neck {
        width: 20px;
        height: 20px;
        background: #151525;
        margin: 0 auto;
        position: relative;
        top: -2px;
        z-index: -1;
    }
    .monitor-base {
        width: 60px;
        height: 8px;
        background: #151525;
        margin: 0 auto;
        border-radius: 2px 2px 0 0;
    }

    /* Screen Animations */
    .code-flow {
        width: 100%;
        height: 200%;
        background:
            linear-gradient(
                90deg,
                transparent 5%,
                var(--c-col) 5%,
                var(--c-col) 40%,
                transparent 40%,
                transparent 50%,
                var(--c-col) 50%,
                var(--c-col) 70%,
                transparent 70%
            ),
            linear-gradient(180deg, transparent 50px, rgba(0, 0, 0, 0.5) 50px);
        background-size: 100% 10px;
        animation: scroll 3s linear infinite;
        opacity: 0.8;
    }

    .green-tint {
        --c-col: #00ff41;
        border-bottom: 2px solid #00ff41;
        box-shadow: 0 0 10px rgba(0, 255, 65, 0.2);
    }
    .blue-tint {
        --c-col: #00f0ff;
        border-bottom: 2px solid #00f0ff;
        box-shadow: 0 0 15px rgba(0, 240, 255, 0.3);
    }
    .purple-tint {
        --c-col: #bd00ff;
        border-bottom: 2px solid #bd00ff;
    }

    @keyframes scroll {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-50%);
        }
    }

    /* -- CHARACTER -- */
    .pixel-character {
        position: absolute;
        bottom: 40px; /* Sitting at desk */
        left: 50%;
        transform: translateX(-50%);
        z-index: 15;
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: breathe 3s ease-in-out infinite;
    }

    .char-head {
        width: 50px;
        height: 55px;
        background: #f0c0a0; /* Skin */
        border: 4px solid #000;
        position: relative;
        border-radius: 8px;
        box-shadow: 4px 0 0 rgba(0, 0, 0, 0.2);
    }

    /* Hair/Hood */
    .char-head::before {
        content: "";
        position: absolute;
        top: -4px;
        left: -4px;
        width: 58px;
        height: 25px;
        background: #222;
        border-radius: 8px 8px 0 0;
    }

    /* Headphones */
    .headphones {
        position: absolute;
        top: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 62px;
        height: 30px;
        border-radius: 20px 20px 0 0;
        border: 6px solid #ff0055;
        border-bottom: none;
    }

    .char-body {
        width: 60px;
        height: 50px;
        background: #333;
        margin-top: -5px;
        border: 4px solid #000;
        border-top: none;
        position: relative;
        z-index: 1;
        border-radius: 12px 12px 0 0;
    }

    .arm {
        position: absolute;
        width: 14px;
        height: 40px;
        background: #222;
        top: 10px;
        border-radius: 4px;
        transform-origin: top center;
    }
    .left-arm {
        left: -8px;
        transform: rotate(20deg);
        animation: type-l 0.1s infinite alternate;
    }
    .right-arm {
        right: -8px;
        transform: rotate(-20deg);
        animation: type-r 0.1s infinite alternate 0.05s;
    }

    .char-chair {
        position: absolute;
        bottom: 0;
        width: 70px;
        height: 60px;
        background: #202020; /* Chair */
        border: 4px solid #000;
        z-index: -1;
        border-radius: 8px;
    }

    /* -- ANIMATIONS -- */
    @keyframes breathe {
        0%,
        100% {
            transform: translateX(-50%) translateY(0);
        }
        50% {
            transform: translateX(-50%) translateY(2px);
        }
    }

    @keyframes type-l {
        to {
            transform: rotate(25deg);
        }
    }
    @keyframes type-r {
        to {
            transform: rotate(-25deg);
        }
    }

    .badge {
        display: inline-block;
        padding: 0.4rem 0;
        background: transparent;
        color: var(--color-primary);
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        border: none;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    h1 {
        font-size: 4.5rem;
        margin-bottom: 2rem;
        letter-spacing: -0.03em;
        font-weight: 300;
        line-height: 1.1;
    }

    .text-gradient {
        background: linear-gradient(
            to right,
            var(--color-primary),
            var(--color-accent)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 600;
    }

    p {
        font-size: 1.25rem;
        margin-bottom: 2.5rem;
        max-width: 600px;
    }

    .cta-group {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: var(--color-primary);
        color: black;
    }

    .btn-primary:hover {
        background: var(--color-primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.4);
    }

    .btn-secondary {
        background: transparent;
        color: var(--color-text);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-secondary:hover {
        border-color: var(--color-text);
        background: rgba(255, 255, 255, 0.05);
    }

    @media (max-width: 968px) {
        .hero {
            padding-top: 7rem;
            align-items: flex-start;
            height: auto;
            overflow: visible;
        }

        .hero-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 3rem;
        }

        .hero-content {
            order: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .hero-image {
            order: 2;
            width: 100%;
        }

        .image-container {
            width: 100%;
            max-width: 400px;
            height: auto;
            aspect-ratio: 1/1;
        }

        h1 {
            font-size: 3rem;
        }

        p {
            font-size: 1.1rem;
        }

        .cta-group {
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        h1 {
            font-size: 2.5rem;
        }

        /* Adjust overlays for mobile if needed, but percentage based should work */
    }
</style>
