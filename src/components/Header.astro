<header class="header">
    <div class="container header-content">
        <a href="#" class="logo">
            <span class="typing-text"></span><span class="cursor">&nbsp;</span>
        </a>
        
        <button class="mobile-menu-btn" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <nav class="nav">
            <a href="#about">Sobre m√≠</a>
            <a href="#projects">Proyectos</a>
            <a href="#contact" class="btn-contact">Contacto</a>
        </nav>
    </div>
</header>

<script>
    const text = "Sebastian.dev";
    const typingElement = document.querySelector('.typing-text');
    const header = document.querySelector('.header');
    const navLinks = document.querySelectorAll('.nav a');
    let charIndex = 0;
    let isDeleting = false;
    let lastScrollY = window.scrollY;

    // Mobile menu logic
    const menuBtn = document.querySelector('.mobile-menu-btn');
    const nav = document.querySelector('.nav');

    menuBtn?.addEventListener('click', () => {
        menuBtn.classList.toggle('active');
        nav?.classList.toggle('active');
    });

    // Close menu when clicking a link
    document.querySelectorAll('.nav a').forEach(link => {
        link.addEventListener('click', () => {
            menuBtn?.classList.remove('active');
            nav?.classList.remove('active');
        });
    });

    // Typing effect
    function typeEffect() {
        if (!typingElement) return;

        const currentString = text.substring(0, charIndex);
        
        if (currentString.includes('.')) {
            typingElement.innerHTML = currentString.replace('.', '<span class="dot">.</span>');
        } else {
            typingElement.textContent = currentString;
        }

        let typeSpeed = 150;

        if (!isDeleting && charIndex < text.length) {
            charIndex++;
            typeSpeed = 150;
        } else if (isDeleting && charIndex > 0) {
            charIndex--;
            typeSpeed = 100;
        } else {
            isDeleting = !isDeleting;
            typeSpeed = isDeleting ? 2000 : 500;
        }

        setTimeout(typeEffect, typeSpeed);
    }

    // Glassmorphism on scroll
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            header?.classList.add('scrolled');
        } else {
            header?.classList.remove('scrolled');
        }

        // Show/hide header on scroll
        if (window.scrollY > lastScrollY && window.scrollY > 100) {
            header?.classList.add('hidden');
        } else {
            header?.classList.remove('hidden');
        }
        lastScrollY = window.scrollY;
    });

    // Active section indicator
    const sections = document.querySelectorAll('section[id]');
    
    function updateActiveLink() {
        const scrollPos = window.scrollY + 100;
        
        sections.forEach(section => {
            const sectionTop = (section as HTMLElement).offsetTop;
            const sectionHeight = (section as HTMLElement).offsetHeight;
            const sectionId = section.getAttribute('id');
            
            if (scrollPos >= sectionTop && scrollPos < sectionTop + sectionHeight) {
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${sectionId}`) {
                        link.classList.add('active');
                    }
                });
            }
        });
    }

    window.addEventListener('scroll', updateActiveLink);
    document.addEventListener('DOMContentLoaded', () => {
        typeEffect();
        updateActiveLink();
    });
</script>

<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1.5rem 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(5px);
        z-index: 100;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .header.scrolled {
        padding: 1rem 0;
        background: rgba(10, 10, 15, 0.85);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(102, 126, 234, 0.2);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
    }

    .header.hidden {
        transform: translateY(-100%);
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: var(--text-2xl);
        font-weight: var(--font-bold);
        color: var(--color-text);
        display: flex;
        align-items: center;
        min-width: 200px;
    }

    :global(.dot) {
        color: var(--color-primary);
    }

    .cursor {
        display: inline-block;
        width: 3px;
        height: 1.5rem;
        background-color: var(--color-primary);
        margin-left: 4px;
        animation: blink 1s infinite;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .nav {
        display: flex;
        gap: 2.5rem;
        align-items: center;
    }

    .nav a:not(.btn-contact) {
        font-size: var(--text-base);
        font-weight: var(--font-medium);
        color: var(--color-muted);
        position: relative;
        padding: 0.5rem 0;
        transition: color 0.3s ease;
    }

    .nav a:not(.btn-contact)::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
        transition: width 0.3s ease;
    }

    .nav a:not(.btn-contact):hover,
    .nav a:not(.btn-contact).active {
        color: var(--color-text);
    }

    .nav a:not(.btn-contact).active::after,
    .nav a:not(.btn-contact):hover::after {
        width: 100%;
    }

    .btn-contact {
        padding: 0.6rem 1.5rem;
        background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
        color: white !important;
        border-radius: 0.5rem;
        font-size: var(--text-sm);
        font-weight: var(--font-semibold);
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
    }

    .btn-contact:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.5);
    }

    .btn-contact::after {
        display: none;
    }

    .mobile-menu-btn {
        display: none;
        flex-direction: column;
        justify-content: center;
        gap: 5px;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        cursor: pointer;
        z-index: 102;
        padding: 8px;
        transition: all 0.3s ease;
    }

    .mobile-menu-btn:hover {
        background: rgba(102, 126, 234, 0.1);
        border-color: rgba(102, 126, 234, 0.3);
    }

    .mobile-menu-btn span {
        width: 100%;
        height: 2px;
        background-color: var(--color-text);
        border-radius: 2px;
        transition: all 0.3s ease;
        transform-origin: center;
    }

    .mobile-menu-btn.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .mobile-menu-btn.active span:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
    }

    .mobile-menu-btn.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
    }

    @media (max-width: 768px) {
        .header-content {
            flex-direction: row;
        }

        .mobile-menu-btn {
            display: flex;
        }

        .nav {
            position: fixed;
            top: 0;
            right: -100%;
            height: 100vh;
            width: 280px;
            max-width: 80%;
            background: rgba(15, 15, 20, 0.98);
            backdrop-filter: blur(20px);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2.5rem;
            transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
            padding: 2rem;
            z-index: 101;
            border-left: 1px solid rgba(255, 255, 255, 0.1);
        }

        .nav.active {
            right: 0;
        }

        .nav a:not(.btn-contact) {
            font-size: var(--text-xl);
        }

        .btn-contact {
            padding: 0.8rem 2rem;
            font-size: var(--text-base);
        }

        .logo {
            font-size: var(--text-lg);
            min-width: auto;
        }
    }
</style>
