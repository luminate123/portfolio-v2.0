---
const experience = [
    {
        date: "2023 - Presente",
        title: "Senior Frontend Developer",
        company: "Tech Solutions Inc.",
        description: "Liderando el desarrollo de aplicaciones web escalables y optimizando el rendimiento del frontend."
    },
    {
        date: "2021 - 2023",
        title: "Full Stack Developer",
        company: "Digital Agency",
        description: "Desarrollo de sitios web corporativos y e-commerce. Implementación de APIs RESTful."
    },
    {
        date: "2020 - 2021",
        title: "Junior Web Developer",
        company: "StartUp Creative",
        description: "Colaboración en el diseño y desarrollo de interfaces de usuario responsivas."
    }
];
---

<section id="experience" class="section">
    <div class="container">
        <h2 class="section-title animate-on-scroll">Trayectoria</h2>
        <div class="timeline">
            {experience.map((job, index) => (
                <div class="timeline-item animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <span class="date">{job.date}</span>
                        <h3>{job.title}</h3>
                        <span class="company">{job.company}</span>
                        <p>{job.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .section-title {
        font-size: 2rem;
        margin-bottom: 4rem;
        font-weight: 300;
        letter-spacing: -0.02em;
    }

    .timeline {
        position: relative;
        max-width: 800px;
        margin-left: 0;
        padding-left: 2rem;
        border-left: 1px solid rgba(255, 255, 255, 0.1);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 4rem;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -2.35rem;
        top: 0.5rem;
        width: 0.7rem;
        height: 0.7rem;
        background: var(--color-bg);
        border: 2px solid var(--color-primary);
        border-radius: 50%;
        transition: background 0.3s ease;
    }

    .timeline-item:hover .timeline-marker {
        background: var(--color-primary);
    }

    .date {
        display: block;
        font-size: 0.875rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
        font-family: monospace;
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 0.25rem;
        font-weight: 500;
    }

    .company {
        display: block;
        font-size: 1rem;
        color: #a3a3a3;
        margin-bottom: 1rem;
    }

    p {
        color: #d4d4d4;
        font-size: 1rem;
        line-height: 1.7;
        max-width: 600px;
    }
</style>
